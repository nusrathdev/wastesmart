<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Navigation Bar for Admin -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="12dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Reports -->
        <LinearLayout
            android:id="@+id/navItem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/navItem1Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_assignment_24"
                app:tint="@color/dark_gray"
                android:contentDescription="Reports"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navItem1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Collector -->
        <LinearLayout
            android:id="@+id/navItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/navItem2Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_person_24"
                app:tint="@color/dark_gray"
                android:contentDescription="Collector"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navItem2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collector"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Home (Center) -->
        <LinearLayout
            android:id="@+id/navItem3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/navItem3Icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_home24"
                app:tint="@color/primary"
                android:contentDescription="Home"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/navItem3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Analytics -->
        <LinearLayout
            android:id="@+id/navItem4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/navItem4Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reports"
                app:tint="@color/dark_gray"
                android:contentDescription="Analytics"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navItem4Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analytics"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Users -->
        <LinearLayout
            android:id="@+id/navItem5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/navItem5Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_person24"
                app:tint="@color/dark_gray"
                android:contentDescription="Users"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/navItem5Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
