<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Status Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Report Details"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_circle_bg"
                android:paddingHorizontal="18dp"
                android:paddingVertical="10dp"
                android:text="ASSIGNED"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.1" />

        </LinearLayout>

        <!-- Waste Type and Size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="top">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waste Type:"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvWasteType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plastic"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textColor="@color/dark_gray"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of the waste report..."
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textColor="@color/dark_gray"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.345678, 98.765432"
                android:textColor="@color/dark_gray"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <!-- Report Date and Photo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted:"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 15, 2024 14:30"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.02" />

            </LinearLayout>

            <!-- Photo Display (Right Side) -->
            <ImageView
                android:id="@+id/ivPhotoCorner"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:background="@drawable/photo_corner_bg"
                android:visibility="gone"
                android:contentDescription="Waste photo thumbnail" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
